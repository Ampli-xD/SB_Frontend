<div class="bg-secondary text-primary rounded-lg shadow-md w-full max-w-md">
    <div class="p-6 border-b border-primary">
      <h2 class="text-2xl font-bold">Room Manager</h2>
      <p class="text-primary mt-2">Join an existing room or create a new one</p>
    </div>
    <div class="p-6">
      <div class="flex mb-6">
        <button class="flex-1 py-2 px-4 bg-primary text-secondary font-medium rounded-tl-md rounded-bl-md focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 tab-trigger active" data-tab="join">Join Room</button>
        <button class="flex-1 py-2 px-4 bg-secondary text-primary font-medium rounded-tr-md rounded-br-md focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 tab-trigger" data-tab="create">Create Room</button>
      </div>
      <div class="tab-content active" id="join-tab">
        <div class="mb-4">
          <label for="roomCode" class="block text-sm font-medium mb-1">Room Code</label>
          <input type="text" id="roomCode" placeholder="Enter room code" class="w-full px-3 py-2 border border-primary rounded-md focus:outline-none focus:ring-2 focus:ring-primary bg-secondary text-primary">
        </div>
        <button id="joinRoomBtn" class="w-full bg-primary text-secondary py-2 px-4 rounded-md hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2">Join Room</button>
      </div>
      <div class="tab-content hidden" id="create-tab">
<div class="mb-4">
          <label for="userName2" class="block text-sm font-medium mb-1">Your Name</label>
          <input type="text" id="userName2" placeholder="Enter your beautiful name..." class="w-full px-3 py-2 border border-primary rounded-md focus:outline-none focus:ring-2 focus:ring-primary bg-secondary text-primary">
        </div>
        <div class="mb-4">
          <label for="roomName" class="block text-sm font-medium mb-1">Room Name</label>
          <input type="text" id="roomName" placeholder="Enter room name" class="w-full px-3 py-2 border border-primary rounded-md focus:outline-none focus:ring-2 focus:ring-primary bg-secondary text-primary">
        </div>
        <div class="mb-4">
          <label for="geminiKey" class="block text-sm font-medium mb-1">Gemini API Key</label>
          <input type="password" id="geminiKey" placeholder="Enter Gemini API Key" class="w-full px-3 py-2 border border-primary rounded-md focus:outline-none focus:ring-2 focus:ring-primary bg-secondary text-primary">
        </div>
        <div class="mb-4">
          <label for="pineconeKey" class="block text-sm font-medium mb-1">Pinecone API Key</label>
          <input type="password" id="pineconeKey" placeholder="Enter Pinecone API Key" class="w-full px-3 py-2 border border-primary rounded-md focus:outline-none focus:ring-2 focus:ring-primary bg-secondary text-primary">
        </div>
        <button id="createRoomBtn" class="w-full bg-primary text-secondary py-2 px-4 rounded-md hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 mb-4">Create Room</button>
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-primary"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-secondary text-primary">Or</span>
          </div>
        </div>
        <div class="mt-4">
          <label for="importFile" class="block text-sm font-medium mb-1">Import Room from JSON</label>
          <input type="file" id="importFile" accept=".json" class="w-full text-sm text-primary file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-primary file:text-secondary hover:file:bg-opacity-90">
        </div>
        <button id="importRoomBtn" class="w-full mt-4 bg-secondary text-primary border border-primary py-2 px-4 rounded-md hover:bg-primary hover:text-secondary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2">Import Room</button>
      </div>
      <div id="statusMessage" class="mt-4 text-center hidden"></div>
    </div>
  </div>
  
  <script src="../scripts/roomManager.js"></script>
